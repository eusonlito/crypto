services:
    crypto-mysql:
        image: mysql:8.0
        container_name: crypto-mysql
        restart: unless-stopped
        volumes:
            - ./../storage/docker/db:/var/lib/mysql
        environment:
            - MYSQL_ROOT_PASSWORD=root
            - MYSQL_USER=crypto
            - MYSQL_PASSWORD=crypto
            - MYSQL_DATABASE=crypto
        command:
            - --character-set-server=utf8
            - --collation-server=utf8_unicode_ci
        networks:
            - crypto-network
        healthcheck:
            test: mysqladmin ping -h localhost --password=root
            interval: 15s
            retries: 15

    crypto-redis:
        image: redis:7.0
        container_name: crypto-redis
        restart: unless-stopped
        networks:
            - crypto-network
        healthcheck:
            test: redis-cli ping
            interval: 5s
            retries: 15

    crypto-app:
        image: crypto-app:latest
        container_name: crypto-app
        restart: unless-stopped
        depends_on:
            crypto-mysql:
                condition: service_healthy
            crypto-redis:
                condition: service_healthy
        build:
            context: ..
            dockerfile: ./docker/Dockerfile
        ports:
            - "8080:80"
            - "8091:8091"
        expose:
            - "8080"
            - "8091"
        networks:
            - crypto-network
        tty: true

networks:
  crypto-network:
    driver: bridge

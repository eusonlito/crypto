{
    "name": "eusonlito/crypto",
    "type": "project",
    "description": "Plataforma multiusuario para gesti√≥n de cryptos",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "bacon/bacon-qr-code": "master-dev",
        "composer/composer": "^2.2",
        "doctrine/dbal": "^3.0",
        "eusonlito/laravel-meta": "^3.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "laravel/framework": "^10.0",
        "laravel/helpers": "^1.2",
        "pragmarx/google2fa-qrcode": "master-dev",
        "predis/predis": "^2.1",
        "sentry/sentry-laravel": "^3.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "fakerphp/faker": "^1.13",
        "friendsofphp/php-cs-fixer": "^3.14.3",
        "laravel/pint": "^1.4.1",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/phpinsights": "dev-master",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^1.4",
        "spatie/laravel-ignition": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "classmap": [
            "database/migrations"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/Services/Helper/functions.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "pre-install-cmd": [
            "@composer dump-autoload",
            "@composer artisan-cache-clear --ansi"
        ],

        "post-install-cmd": [
            "@composer artisan-cache --ansi",
            "@php artisan queue:restart --ansi"
        ],

        "pre-update-cmd": [
            "@composer artisan-cache-clear --ansi"
        ],

        "post-update-cmd": [
            "@php artisan maintenance:opcache:preload"
        ],

        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],

        "post-root-package-install": [
            "@php -r \"is_file('.env') || copy('.env.example', '.env');\"",
            "@composer install --no-scripts"
        ],

        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],

        "artisan-cache-clear": [
            "@php artisan optimize:clear --ansi"
        ],

        "artisan-cache": [
            "@php artisan optimize --ansi",
            "@php artisan view:cache --ansi"
        ],

        "deploy": [
            "git checkout .",
            "git pull",
            "@composer install --no-dev --optimize-autoloader --classmap-authoritative --ansi",
            "@php artisan migrate --force --ansi",
            "@php artisan maintenance:opcache:preload"
        ],

        "fix": [
            "@php ./vendor/bin/php-cs-fixer fix -v --ansi",
            "@php ./vendor/bin/pint -v"
        ],

        "quality": [
            "@php artisan insights -v --ansi",
            "@php ./vendor/bin/phpstan analyse app --ansi"
        ],

        "translation": [
            "@php artisan translation:fix --ansi",
            "@php artisan translation:fill --ansi",
            "@php artisan translation:clean --ansi",
            "git checkout resources/lang/*/validation.php"
        ]
    }
}
